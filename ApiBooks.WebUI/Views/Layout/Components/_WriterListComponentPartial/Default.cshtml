@model List<ResultWriterDto>
<section id="latest-blog" class="py-5 my-5">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<div class="section-header align-center">
					<div class="title">
						<span>Öne Çıkan Yazarlar</span>
					</div>
					<h2 class="section-title">Popüler Yazarlar</h2>
				</div>

				<div class="row">
					@foreach (var item in Model)
					{
						<div class="col-md-4">

							<article class="column" data-aos="fade-up">

								<figure>
									<a href="#" class="image-hvr-effect">
										<img src="@item.ImageUrl" alt="post" class="post-image">
									</a>
								</figure>

								<div class="post-item">
									<div class="meta-date">@item.Name @item.Surname</div>
									<h3><a href="#">@item.About.Substring(0, Math.Min(item.About.Length, 200))...</a></h3>

						@* 			<div class="links-element">
										<div class="categories">Sosyal Medya Hesapları</div>
										<div class="social-links">

											<ul>
												<li>
													<a href="#"><i class="icon icon-facebook"></i></a>
												</li>
												<li>
													<a href="#"><i class="icon icon-twitter"></i></a>
												</li>
												<li>
													<a href="#"><i class="icon icon-youtube-play"></i></a>
												</li>
											</ul>
										</div>
									</div><!--links-element--> *@

								</div>
							</article>

						</div>
					}


				</div>

				<div class="row">

					<div class="btn-wrap align-center">
						<a href="#" class="btn btn-outline-accent btn-accent-arrow" tabindex="0">
							Tüm Yazarları Gör<i class="icon icon-ns-arrow-right"></i>
						</a>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>