@model ApiBooks.WebUI.Dto.CategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategoriler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Kategori Adı</label>
                            <input value="CategoryName" name="CategoryName" placeholder="Kategori Giriniz" class="form-control" />
                            <br />
                            <label>Kategori Adı</label>
                            <input type="text" asp-for="CategoryName"  class="form-control" placeholder="Kategori Adını Yazınız" />
                            <br />
                            <button class="btn btn-primary">Kategori Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


