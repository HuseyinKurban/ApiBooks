@using Newtonsoft.Json
@model List<ResultBookDto>
@{
    ViewData["Title"] = "BookList";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kitaplar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kitaplar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Kitaplar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Kitap Adı</th>
                                    <th scope="col">Fiyatı</th>
                                    <th scope="col">Sayfa Sayısı</th>
                                    <th scope="col">Görseli</th>
                                    <th scope="col">Yazar Bilgisi</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                               
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Price.ToString("N2") ₺</td>
                                        <td>@item.Page</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.Writer.Name @item.Writer.Surname</td>
                                        <td>@item.Category.CategoryName</td>
                                        <td><a href="/Admin/Book/DeleteBook/@item.BookId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Book/UpdateBook/@item.BookId" class="btn btn-success">Güncelle</a></td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Book/CreateBook" class="btn btn-primary">Yeni Kitap Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


